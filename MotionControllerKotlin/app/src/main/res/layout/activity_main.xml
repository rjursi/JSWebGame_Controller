<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:id="@+id/main_scrollview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_scollview_back"
        android:elevation="30dp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/main_scrollview_Linear"
            android:orientation="vertical">

            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_sv_txtIntro"
                android:layout_marginTop="30dp"
                android:textColor="@color/FontColorOfIntro"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_sv_txtProgress"
                android:layout_marginTop="30dp"
                android:textColor="@color/FontColorOfIntro"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pocketmon"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                />
            
            <Button
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="개발자 노트"
                android:id="@+id/main_scrollview_btn"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_btn"
                android:elevation="30dp"
                android:textColor="@color/FontColorOfIntro"
                android:textSize="30dp"
                android:layout_marginBottom="30dp"
                />

        </LinearLayout>

    </ScrollView>


    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/connectCtrlBtn"
        android:text="컨트롤러 연결"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:elevation="30dp"
        android:background="@drawable/shape_btn"
        android:textColor="@color/FontColorOfIntro"
        android:textSize="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>